#!/usr/bin/env bash

set -euo pipefail

TARGET_FORMAT="webm"

usage() {
    echo "Usage: $0 -d <directory> [-f <format>]"
    echo "  -d DIR     Directory containing videos to convert"
    echo "  -f FORMAT  Target video format (default: webm)"
    exit 1
}

while getopts "d:f:" opt; do
    case "$opt" in
        d) DIR="$OPTARG" ;;
        f) TARGET_FORMAT="$OPTARG" ;;
        *) usage ;;
    esac
done

if [[ -z "${DIR:-}" || ! -d "$DIR" ]]; then
    echo "Error: Directory is not specified or doesn't exist."
    usage
fi

shopt -s nullglob
cd "$DIR"

# Supported input formats
EXTENSIONS=("webm" "gif" "mp4" "mkv" "mov")

for ext in "${EXTENSIONS[@]}"; do
    for img in *."$ext"; do
        [[ "${img##*.}" == "$TARGET_FORMAT" ]] && continue

        base="${img%.*}"
        out="${base}.${TARGET_FORMAT}"

        echo "Converting: $img -> $out"

        ffmpeg -hide_banner -loglevel error -y -i "$img" \
            -vf "scale=trunc(iw/2)*2:trunc(ih/2)*2" \
            -c:v libvpx-vp9 -crf 30 -b:v 0 \
            -c:a libopus "$out"

        trash "$img"
    done
done

